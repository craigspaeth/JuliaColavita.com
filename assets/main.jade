!!! 5
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    title Julia Colavita
    meta(name='description', content='Julia Colavita (b. 1983) is a painter and sculptor based in Brooklyn, New York.')
    meta(name='author', content='Julia Colavita')
    meta(name='viewport', content='width=device-width,initial-scale=1')
    style= css
  body
    #container
      header
        h1
          a(href='./') Julia Colavita
        nav.clearfix
          a(href='bio.pdf', target='_blank')
            | BIO
            span.pdf [PDF]
          a(href='cv.pdf', target='_blank')
            | CV
            span.pdf [PDF]
          a(href='mailto:juliacolavita@gmail.com') juliacolavita@gmail.com
      #main(role='main', target='_blank')
        #portfolio
          #portfolio_nav_container
            nav.clearfix
              for collection, name in collections
                a(href='collection')= name
              a(href='para-projections') Para-Projections
          #portfolio_page_container.clearfix
            for collection, name in collections
              .portfolio_page
                ul.artworks.clearfix
                  for artwork in collection
                    if artwork.images.length > 0 && artwork.images[0].image_url
                      landscape = artwork.images[0].aspect_ratio > 1.2
                      if landscape
                        li.landscape_placeholder
                      li( class=landscape ? 'landscape' : '' )
                        img(src=artwork.images[0].image_url.replace(':version', 'large'), 
                            data-large_src=artwork.images[0].image_url.replace(':version', 'larger'))
                        .caption
                          = artwork.title
                          | , 
                          = artwork.date
                          br
                          = artwork.medium
                          br
                          = artwork.dimensions[artwork.metric]
            .portfolio_page
              .para-projections
                iframe(src='http://player.vimeo.com/video/44775766', color='ffffff', width='800', height='448', frameborder='0', webkitallowfullscreen='webkitAllowFullScreen', mozallowfullscreen='mozallowfullscreen', allowfullscreen='allowFullScreen')
          #lightbox
            .img_container
              img(src='large_img')
              .caption
            button#close_lightbox X
      footer
    
    #scripts
      script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js')
      script(src='https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.18/jquery-ui.min.js')
      script!= js